            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" style="@android:style/Widget.Button.Toggle"/>
    <Button
            android:text="+2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="sumarPuntos"
            android:id="@+id/bt_sumar_2_a" android:layout_marginBottom="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" app:layout_constraintHorizontal_bias="0.043"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_bias="0.03" app:layout_constraintTop_toBottomOf="@+id/bt_sumar_1_a"
            style="@android:style/Widget.Button.Toggle"/>
    <Button
            android:text="+3"
            android:layout_width="wrap_content"
            android:onClick="sumarPuntos"
            android:layout_height="wrap_content"
            android:id="@+id/bt_sumar_3_a" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintHorizontal_bias="0.043" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_bias="0.036" app:layout_constraintTop_toBottomOf="@+id/bt_sumar_2_a"
            style="@android:style/Widget.Button.Toggle"/>
    <Button
            android:text="+1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="sumarPuntos"
            android:id="@+id/bt_sumar_1_b"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="48dp" android:layout_marginRight="48dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
