<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.nuevo_partido">
    <TextView
            android:text="0"
            android:layout_width="52dp"
            android:layout_height="64dp"
            android:id="@+id/tv_point1"
            android:textSize="45sp"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:autoSizeMaxTextSize="100sp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.405" app:layout_constraintVertical_bias="0.115"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/bkb_icon"
            android:id="@+id/imageView2" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintHorizontal_bias="0.13" android:layout_marginTop="68dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.013"
            app:layout_constraintEnd_toEndOf="parent"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/bkb_icon"
            android:id="@+id/imageView3" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="40dp"
            android:layout_marginRight="40dp" android:layout_marginTop="76dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.992"
            app:layout_constraintVertical_bias="0.0"/>
    <TextView
            android:text="0"
            android:layout_width="52dp"
            android:layout_height="61dp"
            android:id="@+id/tv_point2" android:textSize="45sp"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp" app:autoSizeMaxTextSize="100sp"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp" android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.641" app:layout_constraintVertical_bias="0.108"/>
    <Button
            android:text="+1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bt_sumar_1_a" android:layout_marginBottom="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:onClick="sumarPuntos"
            android:layout_marginLeft="28dp" android:layout_marginStart="28dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintVertical_bias="0.043" app:layout_constraintTop_toBottomOf="@+id/et_equipo1"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toStartOf="@+id/bt_sumar_1_b"
            android:layout_marginRight="8dp" app:layout_constraintHorizontal_bias="0.152"
            style="@android:style/Widget.Button.Toggle"/>
    <Button
            android:text="+2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bt_sumar_2_a" android:layout_marginBottom="8dp"
            android:onClick="sumarPuntos"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="28dp" android:layout_marginStart="28dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintVertical_bias="0.034"
            app:layout_constraintTop_toBottomOf="@+id/bt_sumar_1_a" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/bt_sumar_2_b" android:layout_marginRight="8dp"
            app:layout_constraintHorizontal_bias="0.166" style="@android:style/Widget.Button.Toggle"/>
    <Button
            android:text="+3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="sumarPuntos"
            android:id="@+id/bt_sumar_3_a" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintHorizontal_bias="0.27" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintVertical_bias="0.038"
            app:layout_constraintEnd_toStartOf="@+id/bt_sumar_3_b"
            app:layout_constraintTop_toBottomOf="@+id/bt_sumar_2_a" style="@android:style/Widget.Button.Toggle"/>
    <Button
            android:text="+1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="sumarPuntos"
            android:id="@+id/bt_sumar_1_b"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/et_equipo2" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="56dp" android:layout_marginRight="56dp"
            style="@android:style/Widget.Button.Toggle"/>
    <Button
            android:text="+2"
            android:layout_width="89dp"
            android:layout_height="47dp"
            android:id="@+id/bt_sumar_2_b"
            android:onClick="sumarPuntos"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="56dp" android:layout_marginRight="56dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/bt_sumar_1_b" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.044"
            style="@android:style/Widget.Button.Toggle"/>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true" app:srcCompat="@android:drawable/ic_input_add"
            android:id="@+id/bt_save" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp" android:layout_marginRight="16dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="0.86"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" app:layout_constraintHorizontal_bias="0.888"
            app:backgroundTint="#141B12" app:rippleColor="#00302020"
            android:onClick="saveMatch"/>
    <EditText
            android:hint="24:00h"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="time"
            android:ems="10"
            android:id="@+id/et_time" android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            app:layout_constraintHorizontal_bias="0.109" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.747"
            app:layout_constraintTop_toTopOf="parent"/>
    <EditText
            android:hint="dd/mm/yy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="date"
            android:ems="10"
            android:id="@+id/et_date" android:layout_marginBottom="100dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"
            app:layout_constraintHorizontal_bias="0.12" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="1.0"/>
    <EditText
            android:layout_width="156dp"
            android:layout_height="42dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:hint="Equipo1"
            android:id="@+id/et_equipo1"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="12dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="12dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView2" app:layout_constraintVertical_bias="0.011"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"
            app:layout_constraintHorizontal_bias="0.0"/>
    <EditText
            android:hint="Equipo2"
            android:layout_width="156dp"
            android:layout_height="42dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/et_equipo2" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView3" android:layout_marginBottom="8dp"
            android:layout_marginEnd="12dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="12dp" app:layout_constraintVertical_bias="0.011"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            app:layout_constraintHorizontal_bias="1.0"/>
    <Button
            android:text="+3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="sumarPuntos"
            android:id="@+id/bt_sumar_3_b" android:layout_marginEnd="56dp"
            app:layout_constraintTop_toBottomOf="@+id/bt_sumar_2_b" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="56dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.062"
            style="@android:style/Widget.Button.Toggle"/>
</androidx.constraintlayout.widget.ConstraintLayout>